<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/back"
    android:gravity="top"
    tools:context=".LogInActivity" >

    <AbsoluteLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/header_text"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_x="0px"
        	android:layout_y="0px"
            android:gravity="center"
            android:singleLine="true"
            android:text="AllSysAmalthea"
            android:background="#A4D3EE"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/header_left_btn"
            android:layout_width="100px"
            android:layout_height="80px"
            android:layout_x="10dp"
            android:layout_y="4dp"
            android:background="@drawable/pic1" />

    </AbsoluteLayout>

    <EditText
        android:id="@+id/Username"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/Password"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_alignRight="@+id/myImageView1"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/myImageView1"
        android:layout_width="500px"
        android:layout_height="400px"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_head" />

    <Button
        android:id="@+id/Register"
        android:layout_width="180px"
        android:layout_height="80px"
        android:layout_alignBaseline="@+id/Login"
        android:layout_alignBottom="@+id/Login"
        android:layout_alignRight="@+id/Password"
        android:background="@drawable/shape2"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250px"
        android:layout_height="60px"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="46dp"
        android:text="Password"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="180px"
        android:layout_height="80px"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape"
        android:text="LogIn"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="250px"
        android:layout_height="60px"
        android:layout_alignLeft="@+id/myImageView1"
        android:layout_below="@+id/myImageView1"
        android:layout_marginTop="88dp"
        android:text="Username"
        android:textSize="24sp" />

</RelativeLayout>