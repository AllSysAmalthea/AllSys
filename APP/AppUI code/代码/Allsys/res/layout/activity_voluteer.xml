<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/back"
    android:gravity="top"
    tools:context=".VoluteerAvtivity" >

    <AbsoluteLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/header_text"
            android:layout_width="fill_parent"
            android:layout_height="68px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:background="#A4D3EE"
            android:gravity="center"
            android:singleLine="true"
            android:text="AllSysAmalthea"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_x="5dp"
            android:layout_y="4dp"
            android:background="@drawable/exit" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_x="260dp"
            android:layout_y="-10dp"
            android:background="@drawable/user" />

    </AbsoluteLayout>

    <ImageButton
        android:id="@+id/Safehouse"
        android:layout_width="420px"
        android:layout_height="60px"
        android:layout_alignLeft="@+id/Location"
        android:layout_below="@+id/Location"
        android:layout_marginTop="4dp"
        android:background="@drawable/safehouse" />

     <ImageButton
         android:id="@+id/Survivor"
         android:layout_width="420px"
         android:layout_height="60px"
         android:layout_alignLeft="@+id/Safehouse"
         android:layout_below="@+id/Safehouse"
         android:layout_marginTop="4dp"
         android:background="@drawable/survivor" />

     <ImageView
         android:id="@+id/MyNew"
         android:layout_width="380px"
         android:layout_height="200px"
         android:layout_below="@+id/linearLayout1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="34dp"
         android:background="@drawable/news05" />

     <ImageButton
         android:id="@+id/Location"
         android:layout_width="420px"
         android:layout_height="60px"
         android:layout_below="@+id/MyNew"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="35dp"
         android:background="@drawable/location" />

     <Button
         android:id="@+id/Task"
         android:layout_width="180px"
         android:layout_height="70px"
         android:layout_below="@+id/Survivor"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="35dp"
         android:background="@drawable/shape3"
         android:text="Task"
         android:textColor="#ffffff"
         android:textSize="28sp" />

</RelativeLayout>